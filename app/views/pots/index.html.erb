<%= form_for @pot do |f| %>
  <p>
    <%= f.label :size %>
    <%= f.text_field :size %>
  </p>
  <p>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.label :owner %>
    <%= f.text_field :owner %>
  </p>
  <p>
    <%= f.submit 'Add pot' %>
  </p>
<% end %>

<%= @pots.each do |pot| %>
  <ul>
    <li>
      <%= link_to "#{pot.size}", pot_path(pot) %>, <%= pot.color %>, <%= pot.owner %>
    </li>
  </ul>
<% end %>